# Production Environment Configuration Template
# Copy this file to .env and update the values for your production environment

# Redis Configuration
REDIS_URL=redis://redis:6379

# Hugging Face Configuration
HUGGINGFACE_TOKEN=your_production_token_here

# Device Configuration
# Options: auto, cuda, cpu
DEVICE=auto

# Model Quantization (reduces memory usage)
USE_QUANTIZATION=true
QUANTIZATION_BITS=4
QUANTIZATION_TYPE=nf4
USE_DOUBLE_QUANT=true
COMPUTE_DTYPE=float16

# Model Loading Configuration
TRUST_REMOTE_CODE=true
TORCH_DTYPE=float16
HF_CACHE_DIR=./models_cache

# FastAPI Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
LOG_LEVEL=INFO

# Security
API_KEY=your_secure_api_key_here_change_in_production
PYTHONUNBUFFERED=1

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=60

# Cache Configuration
CACHE_TTL=3600

# Production Settings
WORKERS=4
MAX_WORKERS=8
KEEP_ALIVE=2
TIMEOUT=120